<div class="content">
  <form action="/type_service" method="post">
    <input type="hidden" name="_method" value="PUT">
    <input type="hidden" name="id" value="{{typeService.id}}">

    <div class="mb-3">
      <label for="name" class="form-label">Наименование</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Наименование" value="{{typeService.name}}" required>
